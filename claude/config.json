{
  "mcpServers": {
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"]
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/shaddai"]
    }
  },
  "allowedCommands": [
    {
      "command": "bluetoothctl power",
      "args": ["*"]
    },
    {
      "command": "bluetoothctl agent",
      "args": ["*"]
    },
    {
      "command": "bluetoothctl default-agent",
      "args": ["*"]
    },
    {
      "command": "bluetoothctl devices",
      "args": ["*"]
    },
    {
      "command": "timeout 15 bluetoothctl",
      "args": ["*"]
    },
    {
      "command": "bluetoothctl trust",
      "args": ["*"]
    },
    {
      "command": "zsh",
      "args": ["*"]
    },
    {
      "command": "chmod",
      "args": ["*"]
    },
    {
      "command": "fzf",
      "args": ["*"]
    },
    {
      "command": "rm",
      "args": ["*"]
    },
    {
      "command": "source",
      "args": ["*"]
    },
    {
      "command": "pacman",
      "args": ["*"]
    },
    {
      "command": "/tmp/pkglist_explicit.txt",
      "args": []
    },
    {
      "command": "ls",
      "args": ["*"]
    },
    {
      "command": "cat",
      "args": ["*"]
    },
    {
      "command": "hyprpm list",
      "args": ["*"]
    },
    {
      "command": "command -v",
      "args": ["*"]
    },
    {
      "command": "systemctl",
      "args": ["*"]
    },
    {
      "command": "sudo sed",
      "args": ["*"]
    },
    {
      "command": "mkdir",
      "args": ["*"]
    },
    {
      "command": "yazi",
      "args": ["*"]
    },
    {
      "command": "timeout 2 yazi",
      "args": ["*"]
    }
  ]
